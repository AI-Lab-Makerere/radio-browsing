{
  "swagger": "2.0",
  "info": {
    "title": "NLP DEMO API",
    "description": "Api for Audio Search Engine",
    "version": "1.0.0",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "basePath": "/",
  "paths": {
    "/search_tag": {
      "post": {
        "tags": ["tag_search"],
        "summary": "searches for a particular tag and returns all audios with that tag",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "Tag params",
            "required": true,
            "schema": {
              "$ref": "#/definitions/tag"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully added a new article"
          },
          "405": {
            "description": "Method NOT Allowed"
          },
          "500": {
            "description": "Internal Server error"
          }
        }
      }
    },
    "/search/tags": {
      "get": {
        "tags": ["tag_search"],
        "summary": "returns all tags",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successfully returns all tags"
          },
          "402": {
            "description": "invalid input, object invalid or missing field"
          },
          "404": {
            "description": "resource not found"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "post": {
        "tags": ["tag_search"],
        "summary": "adds a new tag",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "Tag params",
            "required": true,
            "schema": {
              "$ref": "#/definitions/new_tag"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "success! new tag added"
          },
          "402": {
            "description": "invalid input, object invalid or missing field"
          },
          "404": {
            "description": "topic not found"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "delete": {
        "tags": ["tag_search"],
        "summary": "Deletes tag",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "id",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully deleted article"
          },
          "401": {
            "description": "invalid input, object invalid"
          },
          "404": {
            "description": "Resource not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/search/audios": {
      "get": {
        "tags": ["audios"],
        "summary": "returns all audios",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successfully returns all audios"
          },
          "404": {
            "description": "resource not found"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "post": {
        "tags": ["audios"],
        "summary": "adds new audio",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "Audio params",
            "required": true,
            "schema": {
              "$ref": "#/definitions/audio"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "audio added succesfully"
          },
          "402": {
            "description": "invalid input, object invalid or missing field"
          },
          "500": {
            "description": "internal server error"
          }
        }
      }
    },
    "/search/reviews": {
      "get": {
        "tags": ["reviews"],
        "summary": "returns all reviews about audios",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successfully returns all reviews"
          },
          "404": {
            "description": "No reviews"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "post": {
        "tags": ["reviews"],
        "summary": "adds a new review to an audio",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "Review params",
            "required": false,
            "schema": {
              "$ref": "#/definitions/review"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully adds new review"
          },
          "402": {
            "description": "invalid input, object invalid or missing fields"
          },
          "404": {
            "description": "email or audio or both dont exist!"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "delete": {
        "tags": ["reviews"],
        "summary": "Deletes single review",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "id",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully deleted review"
          },
          "401": {
            "description": "invalid input, object invalid"
          },
          "404": {
            "description": "Resource not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/search": {
      "get": {
        "tags": ["search"],
        "summary": "returns all audios and tags",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successfully retrieved all data"
          },
          "404": {
            "description": "no data found"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "post": {
        "tags": ["search"],
        "summary": "searches for a particular audio and adds tag to it",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "Search params",
            "required": true,
            "schema": {
              "$ref": "#/definitions/search"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully added logged in"
          },
          "401": {
            "description": "invalid input, object invalid"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["users"],
        "summary": "returns all users",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successfully returns all users "
          },
          "404": {
            "description": "no users found"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "post": {
        "tags": ["users"],
        "summary": "adds a new user",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "User params",
            "required": true,
            "schema": {
              "$ref": "#/definitions/user"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully added user"
          },
          "402": {
            "description": "invalid input, object invalid or missing fields"
          },
          "500": {
            "description": "internal server error"
          }
        }
      }
    },
    "/topics": {
      "get": {
        "tags": ["topics"],
        "summary": "returns all topics",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successfully gets all topics"
          },
          "404": {
            "description": "no topics found"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "post": {
        "tags": ["topics"],
        "summary": "Adds a new topic",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "Topic params",
            "required": true,
            "schema": {
              "$ref": "#/definitions/topic"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successfully added a new topic"
          },
          "402": {
            "description": "invalid input, object invalid or missing field"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "delete": {
        "tags": ["topics"],
        "summary": "Deletes a topic",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully deletes admins "
          },
          "402": {
            "description": "invalid input, object invalid or missing field"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/search_topic": {
      "post": {
        "tags": ["topics"],
        "summary": "Returns audios under a given topic",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "Topic params",
            "required": true,
            "schema": {
              "$ref": "#/definitions/topic"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successfully returns all audios under a topic"
          },
          "402": {
            "description": "invalid input, object invalid or missing field"
          },
          "500": {
            "description": "internal server error"
          }
        }
      }
    }
  },
  "definitions": {
    "tag": {
      "type": "object",
      "required": ["tag_name"],
      "properties": {
        "tag_name": {
          "type": "string",
          "example": "tag_name"
        }
      }
    },
    "new_tag": {
      "type": "object",
      "required": ["tag_name", "topic_name"],
      "properties": {
        "tag_name": {
          "type": "string",
          "example": "Allah"
        },
        "topic_name": {
          "type": "string",
          "example": "Religion"
        }
      }
    },
    "audio": {
      "type": "object",
      "required": ["audio_name", "audio_url"],
      "properties": {
        "audio_name": {
          "type": "string",
          "example": "test.mp3"
        },
        "audio_url": {
          "type": "string",
          "example": "www.storagelocation.com/test.mp3"
        }
      }
    },
    "search": {
      "type": "object",
      "required": ["audio_name", "tag_name"],
      "properties": {
        "audio_name": {
          "type": "string",
          "example": "test.mp3"
        },
        "tag_name": {
          "type": "string",
          "example": "Allah"
        }
      }
    },
    "user": {
      "type": "object",
      "required": ["user_email"],
      "properties": {
        "user_email": {
          "type": "string",
          "example": "myemail@example.com"
        }
      }
    },
    "topic": {
      "type": "object",
      "required": ["topic_name"],
      "properties": {
        "topic_name": {
          "type": "string",
          "example": "topicname"
        }
      }
    },
    "review": {
      "type": "object",
      "required": ["user_name", "audio_name", "comment"],
      "properties": {
        "user_email": {
          "type": "string",
          "example": "example@email.com"
        },
        "audio_name": {
          "type": "string",
          "example": "audio.format"
        },
        "comment": {
          "type": "string",
          "example": "this is a test comment"
        }
      }
    }
  }
}
